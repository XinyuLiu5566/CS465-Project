<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#20ea4335"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Emergency\nServices?"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:gravity="center"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/button_success"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="#ea4335"
        android:drawableTop="@drawable/white_x"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="30sp" />

<Button
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:drawableTop="@drawable/white_checkbox"
    android:text="confirm"
    android:backgroundTint="#2f5c36"
    android:textColor="@color/white"
    android:textSize="30sp" />
</LinearLayout>